<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewViewFull"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Controls overlay: hidden by default, toggle with top-right button -->
    <ImageButton
        android:id="@+id/toggleControlsButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        android:layout_gravity="top|end"
        android:backgroundTint="#66000000"
        android:src="@android:drawable/ic_menu_manage"
        android:contentDescription="Toggle Controls" />

    <LinearLayout
        android:id="@+id/previewControlsOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_gravity="bottom"
        android:background="#66000000"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zoom"
            android:textColor="#FFFFFF"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2" />
        <SeekBar
            android:id="@+id/zoomSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exposure"
            android:textColor="#FFFFFF"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2" />
        <SeekBar
            android:id="@+id/exposureSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/focusCenterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refocus"
                android:padding="3dp"
                android:textColor="#FFFFFF"
                android:background="#3B3B3B"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <Button
                android:id="@+id/stopPreviewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:textColor="#FFFFFF"
                android:background="#3B3B3B"
                android:padding="3dp"
                android:layout_marginStart="16dp"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
